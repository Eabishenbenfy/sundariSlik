                                {%- liquid
                                    assign product_limit = 0
                                    assign column = section.settings.product_block_per_row
                                    if infinite_scroll
                                        assign product_limit = limit
                                    endif
                                -%}
                                {% for block in block_tabs %}
                                    {% if block.type == 'ProductTabs' %}
                                        {% if layout == 'scroll' %}<product-scroller>{% endif %}
                                            <div class="tab-content{% if forloop.first %} active{% endif %} {% if layout == 'scroll' %}is-scroll{% endif %}" data-product-TabContent id="product-tab-{{ section.id }}-{{ block.id }}" {% if layout == 'scroll' %}data-drag-container{% endif %}>
