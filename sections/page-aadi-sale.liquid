    {%- liquid
    assign container = section.settings.container
    assign limit = section.settings.product_block_limit
    assign layout = section.settings.product_block_layout
    assign infinite_scroll = section.settings.product_block_infinite_scroll
    assign enable_scroll_title = section.settings.enable_scroll_title

    assign block_title = section.settings.product_block_title
    assign block_title_align = section.settings.title_align
    assign image_ratio = settings.product_block_image_ratio

    assign swipe = false

    assign block_banners = section.blocks | where: 'type', 'banner'
    assign block_banner = block_banners[0]
    assign block_tabs = section.blocks | where: 'type', 'ProductTabs'
    assign show_banner = false
    if block_banner != blank
        assign show_banner = true
    endif

    assign color_title = section.settings.color_title
    assign fontsize_title = section.settings.fontsize_title
    assign fontsize_title_mb = section.settings.fontsize_title_mb
    assign border_color_title = section.settings.border_color_title
    assign border_color_title2 = section.settings.border_color_title2

    assign mg_top_desktop = section.settings.mg_top_desktop
    assign mg_top_tablet = section.settings.mg_top_tablet
    assign mg_top_mobile = section.settings.mg_top_mobile

    assign mg_bottom_desktop = section.settings.mg_bottom_desktop
    assign mg_bottom_tablet = section.settings.mg_bottom_tablet
    assign mg_bottom_mobile = section.settings.mg_bottom_mobile

    assign padding_full_width = section.settings.padding_full_width

    assign mg_bottom_title = section.settings.mg_bottom_title

    assign mg_bottom_title_tab = section.settings.mg_bottom_title_tab
    assign fontsize_tab = section.settings.fontsize_tab
    assign fontsize_tab_mb = section.settings.fontsize_tab_mb
    assign font_weight_tab = section.settings.font_weight_tab
    assign font_weight_active_tab = section.settings.font_weight_active_tab
    assign line_height_tab = section.settings.line_height_tab
    assign line_height_tab_mobile = section.settings.line_height_tab_mobile
    assign min_width = section.settings.min_width_tab
    assign border_tab_radius = section.settings.border_tab_radius
    assign border_width_tab = section.settings.border_width_tab
    assign color_tab = section.settings.color_tab
    assign bg_color_tab = section.settings.bg_color_tab
    assign bg_color_gradient_tab = section.settings.bg_color_gradient_tab
    assign border_color_tab = section.settings.border_color_tab
    assign color_tab_active = section.settings.color_tab_active
    assign bg_color_tab_active = section.settings.bg_color_tab_active
    assign bg_color_gradient_tab_active = section.settings.bg_color_gradient_tab_active

    assign min_width_button = section.settings.min_width_button
    assign color_separation = section.settings.color_separation

    if layout == 'scroll'
        assign show_half = section.settings.show_half
    endif
-%}

<style>
    .section-block-{{section.id}} {
        {%- if section.settings.type_tab_font == 'font_1' -%}
        --font-tab: var(--font-tab-type-1);
        {%- else -%}
        --font-tab: var(--font-tab-type-2);
        {%- endif -%}
    }

    .section-block-{{section.id}} .halo-block-header .title {
        color: {{ color_title }};
        font-size: {{ fontsize_title | append: 'px'  }};
        {% if show_banner == false %}
        margin-bottom: {{ mg_bottom_title | append: 'px' }};
        {% endif %}
    }

    .section-block-{{section.id}} .halo-block-header .title:before {
        background-color: {{ border_color_title }};
        {% if show_banner or section.settings.enable_border_title == false %}
        display: none;
        {% endif %}
    }

    {% if show_banner %}
        .section-block-{{section.id}} .halo-block-top {
            {%- if section.settings.enable_border_title -%}
            border-bottom: 1px solid {{ border_color_title }};
            {%- endif -%}
            margin-bottom: {{ mg_bottom_title | append: 'px' }};
        }
        {% if section.settings.enable_border_title2 %}
            .section-block-{{section.id}} .halo-block-header,
            .section-block-{{section.id}} .halo-block-header .title .text {
                width: auto !important;
            }
            .section-block-{{section.id}} .halo-block-header {
                border-bottom: 3px solid {{ border_color_title2 }};
            }
        {% endif %}
    {% endif %}

    .section-block-{{section.id}} .list-product-tabs {
        margin-bottom: {{ mg_bottom_title_tab | append: 'px' }};
    }

    .section-block-{{section.id}} .list-product-tabs a {
        font-family: var(--font-tab);
        color: {{ color_tab }};
        font-size: {{ fontsize_tab | append: 'px' }};
        font-weight: {{ font_weight_tab }};
        line-height: {{ line_height_tab | append: 'px' }};
        border-radius: {{ border_tab_radius | append: 'px' }};
        {% if section.settings.tab_title_style == 'style_1' %}
            background: {% if bg_color_gradient_tab != blank %}{{ bg_color_gradient_tab }}{% else %}{{ bg_color_tab }}{% endif %};
            {% if border_color_tab != blank %}
                border: {{ border_width_tab | append: 'px' }} solid {{ border_color_tab }};
            {% endif %}
        {% else %}
            border-bottom: {{ border_width_tab | append: 'px' }} solid transparent;
        {% endif %}
    }

    .section-block-{{section.id}} .list-product-tabs a.active {
        {% if section.settings.tab_title_style == 'style_2' %}
            {% if border_color_tab != blank %}
                border-bottom: {{ border_width_tab | append: 'px' }} solid {{ border_color_tab }};
            {% endif %}
        {% endif %}
        color: {{ color_tab_active }};
        background: {% if bg_color_gradient_tab_active != blank %}{{ bg_color_gradient_tab_active }}{% else %}{{ bg_color_tab_active }}{% endif %};
        font-weight: {{ font_weight_active_tab }};
    }

    .section-block-{{section.id}} .list-product-tabs li {
        color: {{ color_tab }};
        font-size: {{ fontsize_tab | append: 'px' }};
        line-height: {{ line_height_tab | append: 'px' }};
        right: -{{ section.settings.spacing_between_title | times: 0.5 | plus: 7 | append: 'px' }};
        margin: 0 {{ section.settings.spacing_between_title | times: 0.5 | append: 'px' }};
    }

    .section-block-{{section.id}} .list-product-tabs li.separation {
        color: {{ color_separation }};
        min-width: 1px;
    }

    .section-block-{{section.id}} .list-product-tabs.list-tab__style_2 li a.active:before {
        border-bottom-color: {{ bg_color_tab_active }};
    }

     /* Start: Scroll Layout */
     .section-block-{{section.id}} .products-flex {
        display: flex;
        flex-direction: row;
        flex-wrap: nowrap;
        user-select: none;
        padding-bottom: 45px;
        overflow: auto;
        gap: 30px;
        padding-right: 60px;
    }

    .section-block-{{section.id}} .halo-product-block .products-flex .product {
        flex-shrink: 0;
        flex-grow: 0;
        padding: 0;
    }

    .section-block-{{section.id}} .halo-block-content.is-scroll {
        overflow: hidden;
    }

    .section-block-{{ section.id }} .products-flex::-webkit-scrollbar {
        height: var(--scrollbar-height, 3px);
        cursor: pointer;
    }

    .section-block-{{section.id}} .products-flex::-webkit-scrollbar-track {
        background: var(--scrollbar-track-color, #dadada);
    }

    .section-block-{{section.id}} .products-flex::-webkit-scrollbar-thumb {
        background: var(--scrollbar-thumb-color, #000);
    }

    .section-block-{{section.id}} .products-flex::-webkit-scrollbar-thumb:hover {
        background: var(--scrollbar-thumb-hover-color, #333);
    }

    .section-block-{{ section.id }} .products-flex.active .product {
        pointer-events: none;
    }

    /* End: Scroll Layout */

    @media (min-width: 1200px) {
        .section-block-{{section.id}} {
            padding-top: {{ mg_top_desktop | append: 'px' }};
            padding-bottom: {{ mg_bottom_desktop | append: 'px' }};
        }
        {% if min_width_button != blank %}
            .section-block-{{section.id}} .product-infinite-scroll .button {
                width: {{ min_width_button }};
            }
        {% endif %}
    }

    @media (min-width: 1025px) {
        {% if section.settings.container == 'fullwidth' %}
            .section-block-{{section.id}} .container-full {
                padding-left: {{ padding_full_width | append: 'px' }};
                padding-right: {{ padding_full_width | append: 'px' }};
            }
        {% endif %}

        .section-block-{{section.id}} .list-product-tabs li:not(.separation) {
            min-width: {{ min_width | append: 'px' }};
        }

        .section-block-{{section.id}} .list-product-tabs a:hover {
            color: {{ color_tab_active }};
            background-color: {{ bg_color_tab_active }};
            font-weight: {{ font_weight_active_tab }};
        }
    }

    @media (min-width: 768px) and (max-width: 1199px) {
        .section-block-{{section.id}} {
            padding-top: {{ mg_top_tablet | append: 'px' }};
            padding-bottom: {{ mg_bottom_tablet | append: 'px' }};
        }

        .section-block-{{section.id}} .list-product-tabs {
            margin-bottom: 8px;
        }
    }
    
    @media (min-width: 768px) {
        .section-block-{{section.id}} .halo-product-block .products-flex .product {
            {% if show_half %}
                flex-basis: calc(100% / calc(var(--count) + 0.5));
                width: calc(100% / calc(var(--count) + 0.5));
            {% else %}
                flex-basis: calc(100% / var(--count));
                width: calc(100% / var(--count));
            {% endif %}
        }
    }

    @media (max-width: 1024px) {
        .section-block-{{ section.id }} .products-flex {
            --count: 2!important;
            gap: 15px;
        }
        
        .section-block-{{ section.id }} .products-flex .product {
            padding: 0 7px;
        }

        .section-block-{{section.id}} .products-flex {
            scroll-snap-type: x mandatory;
            padding-bottom: 0;
        }
    
        .section-block-{{section.id}} .halo-product-block .products-flex .product {
            scroll-snap-align: start;
        }
    }

    @media (max-width: 767px) {
        .section-block-{{section.id}} {
            padding-top: {{ mg_top_mobile | append: 'px' }};
            padding-bottom: {{ mg_bottom_mobile | append: 'px' }};
        }

        .section-block-{{section.id}} .list-product-tabs a {
            font-size: {{ fontsize_tab_mb | append: 'px' }} !important;
            line-height: {{ line_height_tab_mobile | append: 'px' }};
        }

        .section-block-{{section.id}} .halo-block-header .title {
            font-size: {{ fontsize_title_mb | append: 'px'  }};
        }

        .section-block-{{section.id}} .halo-block-top {
            border: 0;
        }
        
        .list-product-tabs.list-tab__style_2 li a.active:before {
            display: none !important;
        }

        .product-tab-block .list-product-tabs.list-tab__style_2 li a {
            margin: 0;
        }

        .section-block-{{ section.id }} .products-flex .product {
            {% if show_half %}
                flex-basis: calc(100% / calc(var(--count) - 0.3));
                width: calc(100% / calc(var(--count) - 0.3));
            {% else %}
                flex-basis: calc(100% / var(--count));
                width: calc(100% / var(--count));
            {% endif %}
        }
    }

    @media (max-width: 551px){
        {% if show_banner %}
            {% if section.settings.enable_border_title2 %}
                .section-block-{{section.id}} .halo-block-header{
                    border-bottom: 0;
                }
                .section-block-{{section.id}} .halo-block-header .title{
                    border-bottom: 1px solid {{ border_color_title }};
                }
                .section-block-{{section.id}} .halo-block-header .title .text{
                    border-bottom: 3px solid {{ border_color_title2 }};
                    margin-bottom: 0;
                }
            {% endif %}
        {% endif %}
    }
</style>


