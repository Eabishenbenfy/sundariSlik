<script>
  $(document).ready(function () {
    // Initialize the current active index
    let currentIndex = 0;

    // Handle next button click
    $('.timeline_navigation .next').on('click', function () {
      moveTimeline('next');
    });

    // Handle prev button click
    $('.timeline_navigation .prev').on('click', function () {
      moveTimeline('prev');
    });

    function moveTimeline(direction) {
      // Get all timeline items
      const timelineItems = $('.timeline--item');

      // Remove activeMe class from the current active item
      timelineItems.eq(currentIndex).removeClass('activeMe');

      // Calculate the new index based on the direction
      if (direction === 'next') {
        currentIndex = (currentIndex + 1) % timelineItems.length;
      } else {
        currentIndex = (currentIndex - 1 + timelineItems.length) % timelineItems.length;
      }

      // Add activeMe class to the new active item
      timelineItems.eq(currentIndex).addClass('activeMe');
    }
  });
</script>
